.cardTemplateRoot, .cardContainer
{
	display:flex;
	flex-direction:row;
	width:100%;
	height:100%;
	justify-content:center;
	align-items:center;
	border-width: 0;
    margin: 0px;
    padding: 0px;
}

.content
{
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
	width:50%;
}

.cardPositionContainer, .cardDriverContainer, .cardDriverNameContainer
{
	padding-left:5%;
}

.cardScoreContainer
{
	flex:1;
	display:flex;
	flex-direction:row;
	justify-content:flex-end;
	width:50%;
}