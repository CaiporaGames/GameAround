/* TITLE CONTAINER */
.titleContainer, .titleContent,.scoreContent
{
	display:flex;
	flex-direction:row;
	color:white;
	width:60%;
	-unity-font-style: bold;
	font-size: 120%;
	top:18%;
}

.titleContent
{
	display:flex;
	justify-content:flex-start;

}

.driverTitle
{
	display:flex;
	width:100%;
	margin-left:10%;
	padding-left:10%;
}

.scoreContent
{
	display:flex;
	justify-content:flex-end;
	padding-left:5%;
}

